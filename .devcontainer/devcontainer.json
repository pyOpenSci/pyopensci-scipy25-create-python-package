			"version": "4.2.0"
		},
		"ghcr.io/devcontainers-extra/features/black:2.0.18": {
			"version": "25.1.0"
		},
		"ghcr.io/devcontainers-extra/features/isort:2.0.18": {
			"version": "6.0.1"
